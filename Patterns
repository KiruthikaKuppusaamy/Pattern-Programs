C Program - Solution 1

#include <stdio.h>
void main() 
{
   int n = 4;
   for(int i=1;i<=4;i++)
   {
       for(int j=1;j<=n;j++)
       {
           printf("*");
       }
       n--;
       printf("\n");
   }
}

C Program - Solution 2

#include <stdio.h>
void main() 
{
   int n = 4;
   for(int i=1;i<=4;i++)
   {
       for(int j=1;j<=n-i+1;j++)
       {
           printf("*");
       }
       printf("\n");
   }
}

Python Program

n = int(input("Enter the Number : "))
for i in range(0,n):
    for j in range(0,n-i):
        print("*",end=" ")
    print()

