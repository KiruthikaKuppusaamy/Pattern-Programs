C Program

#include <stdio.h>
void main() 
{
   int n = 4;
   for(int i=1;i<=4;i++)
   {
      for(int j=1;j<=n-i;j++)
      {
          printf(" ");
      }
      
      for(int k=1;k<=2*i-1;k++)
      {
          printf("*");
      }
    

      for(int j=1;j<=n-i;j++)
      {
          printf(" ");
      }

      
       printf("\n");
   }
}

Python Program

n = int(input("Enter the Number : "))
for i in range(1,n+1):
   for j in range(1,n-i+1):
       print(" ",end = "")
       
   for k in range(0,2*i-1):
       print("*",end = "")       
       
   for j in range(1,n-i+1):
       print(" ",end = "")
print()


